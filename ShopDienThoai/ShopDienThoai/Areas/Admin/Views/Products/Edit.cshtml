@model ShopDienThoai.Models.Product
@using System.IO
@{
    ViewData["Title"] = "Chỉnh sửa thông tin sản phẩm";
}

<div class="row">
    <div class="col-8">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Thông tin sản phẩm</h4>
                <form asp-action="edit" method="post" enctype="multipart/form-data" class="forms-sample">
                    <div class="form-group">
                        <label asp-for="ProductId" class="form-label">Mã sản phẩm</label>
                        <input asp-for="ProductId" class="form-control" readonly>
                        <input name="id" value="@Model.ProductId" type="hidden">
                        <span asp-validation-for="ProductId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductName" class="form-label">Tên sản phẩm</label>
                        <input asp-for="ProductName" class="form-control" placeholder="Nhập tên sản phẩm">
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="form-label">Giá (USD)</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Nhập giá sản phẩm">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId" class="form-label">Danh mục</label>
                        <select asp-for="CategoryId" class="form-control">
                            <option value="">Chọn danh mục</option>
                            @foreach (var category in ViewBag.Categories as IEnumerable<ShopDienThoai.Models.Category>)
                            {
                                <option value="@category.CategoryId">@category.CategoryName</option>
                            }
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Brand" class="form-label">Thương hiệu</label>
                        <select asp-for="Brand" class="form-control">
                            <option value="">Chọn thương hiệu</option>
                            @foreach (var brand in ViewBag.Brands)
                            {
                                <option value="@brand">@brand</option>
                            }
                        </select>
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StockQuantity" class="form-label">Số lượng tồn kho</label>
                        <input asp-for="StockQuantity" type="number" class="form-control" placeholder="Nhập số lượng tồn kho">
                        <span asp-validation-for="StockQuantity" class="text-danger"></span>
                    </div>
                    <!-- Các trường khác như tên, giá, v.v... -->
                    <div class="form-group">
                        <label asp-for="Description" class="form-label">Mô tả</label>
                        <textarea asp-for="Description" class="form-control" id="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="ImageFiles" class="form-label">Hình ảnh</label>
                        <input type="file" name="ImageFiles" id="ImageFiles" asp-for="ImageURL" class="form-control" multiple>
                        <span asp-validation-for="ImageURL" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Lưu thay đổi</button>
                    <a href="/admin/products" class="btn btn-dark">Hủy</a>
                </form>
            </div>
        </div>
    </div>
</div>


<style>
    .ck-editor__editable {
        height: 500px;
    }
</style>

<script type="module">
    import { classicEditor } from '/asset/js/source.js';
    classicEditor('#Description')
</script>