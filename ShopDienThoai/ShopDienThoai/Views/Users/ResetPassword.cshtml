
@model ShopDienThoai.Models.ResetPasswordModel
@{
  ViewBag.Title = "Đăt lại mật khẩu";
  Layout = "~/Views/Shared/_Login.cshtml";
}
<!-- Forgot Password Form Start -->
<div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg justify-content-center">
  <div class="row justify-content-center wrapper" id="forgot-box">
    <div class="col-lg-10 my-auto myShadow" style="min-width: 1239px;">
      <div class="row">
        <div class="col-lg-7 bg-white p-4">
          <h1 class="text-center font-weight-bold text-primary">Forgot Your Password?</h1>
          <hr class="my-3" />
          <p class="lead text-center">
            @if (ViewBag.Message != null)
            {
              string className = "";
              if (ViewBag.Status == true)
                className = "text-success";
              else
                className = "text-danger";
              <span class="@className">@ViewBag.Message</span>
            }
          </p>
          <form asp-controller="Users" asp-action="ResetPassword" class="px-3" id="forgot-form">
            <div id="forgotAlert"></div>
            <div class="input-group input-group-lg form-group">
              <div class="input-group-prepend">
                <span class="input-group-text rounded-0"><i class="far fa-envelope fa-lg fa-fw"></i></span>
              </div>
              <input type="email" asp-for="@Model.Email" class="form-control rounded-0" placeholder="Email" disabled />
            </div>
            <div class="input-group input-group-lg form-group">
              <div class="input-group-prepend">
                <span class="input-group-text rounded-0"><i class="fas fa-key fa-lg fa-fw"></i></span>
              </div>
              <input type="password" asp-for="@Model.NewPassword" class="form-control rounded-0" placeholder="Mật khẩu mới" required />
            </div>
            <div class="input-group input-group-lg form-group">
              <div class="input-group-prepend">
                <span class="input-group-text rounded-0"><i class="fas fa-key fa-lg fa-fw"></i></span>
              </div>
              <input type="password" asp-for="@Model.ConfirmPassword" class="form-control rounded-0" placeholder="Nhập lại mật khẩu mới" required />
            </div>
            <input type="hidden" asp-for="@Model.ResetCode" class="form-control rounded-0"/>
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-lg btn-block myBtn">Reset Password</button>
            </div>
          </form>
        </div>
        <div class="col-lg-5 d-flex flex-column justify-content-center myColor p-4">
          <h1 class="text-center font-weight-bold text-white">Reset Password!</h1>
          <hr class="my-4 bg-light myHr" />
          <a class="btn btn-outline-light btn-lg font-weight-bolder myLinkBtn align-self-center" asp-controller="Users" asp-action="Login" id="back-link">Back</a>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Forgot Password Form End -->

